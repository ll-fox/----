{
  "bsonType": "object",
  "required": ["trackingNumber", "courier"],
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "ID，系统自动生成"
    },
    "trackingNumber": {
      "bsonType": "string",
      "title": "快递单号",
      "description": "用户输入的快递单号",
      "minLength": 8,
      "maxLength": 20
    },
    "courier": {
      "bsonType": "string",
      "title": "快递公司",
      "description": "用户选择的快递公司",
      "enum": ["顺丰速运", "圆通快递", "中通快递", "韵达快递", "京东物流", "邮政快递"]
    },
    "remark": {
      "bsonType": "string",
      "title": "备注",
      "description": "用户输入的备注信息",
      "maxLength": 200
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "创建时间",
      "description": "数据创建时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
} 